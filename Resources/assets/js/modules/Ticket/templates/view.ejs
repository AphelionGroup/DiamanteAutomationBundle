<p>
    <a class="btn btn-link js-back" href="#tickets">
        <span class="fa fa-chevron-left"></span>
        Back
    </a>
</p>
<h1><%= subject %></h1>
<small class="ticket-id">Ticket ID: <%= key %></small>
<div class="row">
    <div class="col-md-8">
        <div class="ticket-actions pull-right">
            <button class="btn btn-primary js-edit-ticket">Edit Ticket</button>
            <button class="btn btn-primary">Join Ticket</button>
            <div class="btn-group">
                <div class="btn btn-primary">6</div>
                <button class="btn btn-primary">Vote</button>
            </div>
        </div>
        <div class="ticket-meta">
            <div class="row">
                <span class="col-xs-4"><%= created %></span>
                <span class="col-xs-4"><%= priority %></span>
                <span class="col-xs-4"><%= status %></span>
            </div>
        </div>
        <h2>Ticket Description</h2>
        <p><%= description %></p>
        <div class="block" id="comments">
            Loading ...
        </div>
    </div>
    <div class="col-md-4 ticket-aside">
        <div class="group">
            <div class="block">
                <% if(status !== 'closed'){ %>
                <button type="button" class="btn btn-primary btn-lg btn-block js-close-ticket">Resolve Ticket</button>
                <% } else { %>
                <button type="button" class="btn btn-primary btn-lg btn-block js-open-ticket">Reopen Ticket</button>
                <% } %>
            </div>
            <div class="block" id="attachments">
                Loading ...
            </div>
            <div class="block">
                <h2>People</h2>
                <ul class="list-unstyled">
                    <li><a href="#">Tony Anderson</a></li>
                </ul>
                <button type="button" class="btn btn-primary btn-sm">Add Collaborator</button>
            </div>
        </div>
        <div class="group">
            <div class="block">
                <h2>Submited by</h2>
                <ul class="list-unstyled">
                    <li><a href="#"><%= reporter.first_name %> <%= reporter.last_name %></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

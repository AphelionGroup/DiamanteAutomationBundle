<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="diamante.email_processing.context.class">Eltrino\EmailProcessingBundle\Model\Processing\Context</parameter>
        <parameter key="diamante.email_processing.strategy_holder.class">Eltrino\EmailProcessingBundle\Model\Processing\StrategyHolder</parameter>
        <parameter key="diamante.email_processing.service.class">Eltrino\EmailProcessingBundle\Api\Impl\EmailProcessingServiceImpl</parameter>
        <parameter key="diamante.email_processing.mail_system_settings.class">Eltrino\EmailProcessingBundle\Model\Mail\SystemSettings</parameter>
        <parameter key="diamante.email_processing.message_processing_manager.class">Eltrino\EmailProcessingBundle\Model\Service\MessageProcessingManager</parameter>
        <parameter key="diamante.email_processing.zend_imap_message_provider.factory.class">Eltrino\EmailProcessingBundle\Infrastructure\Message\ZendImapMessageProviderFactory</parameter>
        <parameter key="diamante.email_processing.zend_raw_message_provider.factory.class">Eltrino\EmailProcessingBundle\Infrastructure\Message\ZendRawMessageProviderFactory</parameter>
        <parameter key="diamante.email_processing.form.type.default_branch.class">Eltrino\EmailProcessingBundle\Form\DefaultBranchType</parameter>
        <parameter key="diamante.email_processing.branchRemoveEventListener.class">Eltrino\EmailProcessingBundle\Infrastructure\Persistence\Doctrine\BranchRemoveEventListener</parameter>
        <parameter key="diamante.email_processing.placeholder.filter.default_branch.class">Eltrino\EmailProcessingBundle\Placeholder\DefaultBranchFilter</parameter>
    </parameters>

    <services>
        <service id="diamante.email_processing.strategy_holder" class="%diamante.email_processing.strategy_holder.class%" />

        <service id="diamante.email_processing.context" class="%diamante.email_processing.context.class%" />

        <service id="diamante.email_processing.zend_imap_message_provider.factory" class="%diamante.email_processing.zend_imap_message_provider.factory.class%"/>
        <service id="diamante.email_processing.zend_raw_message_provider.factory" class="%diamante.email_processing.zend_raw_message_provider.factory.class%"/>

        <service id="diamante.email_processing.message_processing_manager" class="%diamante.email_processing.message_processing_manager.class%">
            <argument type="service" id="diamante.email_processing.context"/>
            <argument type="service" id="diamante.email_processing.strategy_holder"/>
        </service>

        <service id="diamante.email_processing.service" class="%diamante.email_processing.service.class%">
            <argument type="service" id="diamante.email_processing.message_processing_manager"/>
            <argument type="service" id="diamante.email_processing.zend_imap_message_provider.factory"/>
            <argument type="service" id="diamante.email_processing.zend_raw_message_provider.factory"/>
            <argument type="service" id="diamante.email_processing.mail_system_settings"/>
        </service>

        <service id="diamante.email_processing.mail_system_settings" class="%diamante.email_processing.mail_system_settings.class%">
            <argument type="service" id="oro_config.global"/>
        </service>

        <service id="diamante.email_processing.form.type.default_branch" class="%diamante.email_processing.form.type.default_branch.class%">
            <argument type="service" id="diamante.branch.service"/>
            <tag name="form.type" alias="diamante_email_processing_default_branch"/>
        </service>

        <service id="diamante.email_processing.branchRemoveEventListener" class="%diamante.email_processing.branchRemoveEventListener.class%">
            <argument type="service" id="service_container"/>
            <tag name="doctrine.event_listener" event="preRemove"></tag>
        </service>

        <service id="diamante.email_processing.placeholder.filter.default_branch" class="%diamante.email_processing.placeholder.filter.default_branch.class%">
            <!--<argument type="service" id="service_container"/>-->
            <argument type="service" id="diamante.email_processing.mail_system_settings"/>
            <tag name="oro_ui_placeholder.filter"/>
        </service>

    </services>
</container>

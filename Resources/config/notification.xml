<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- subscribers start-->
        <parameter key="diamante.ticket_subscriber.class">Diamante\DeskBundle\EventListener\TicketSubscriber</parameter>
        <!-- subscribers end -->
        <parameter key="diamante.ticket_was_updated_mail_notifier.class">Diamante\DeskBundle\Infrastructure\Ticket\Notification\TicketWasUpdatedMailNotifier</parameter>
        <parameter key="diamante.ticket_was_created_mail_notifier.class">Diamante\DeskBundle\Infrastructure\Ticket\Notification\TicketWasCreatedMailNotifier</parameter>
    </parameters>

    <services>
        <!-- subscribers start -->
        <service id="diamante.ticket_subscriber" class="%diamante.ticket_subscriber.class%">
            <tag name="kernel.event_subscriber" />
        </service>
        <!-- subscribers end -->
        <service id="diamante.ticket_was_updated_mail_notifier.class" class="%diamante.ticket_was_updated_mail_notifier.class%">
            <argument type="service" id="twig"/>
            <argument type="service" id="mailer"/>
            <argument>%mailer_user%</argument>
            <tag name="diamante.ticket_updated_mail_notifier" />
        </service>
        <service id="diamante.ticket_was_created_mail_notifier.class" class="%diamante.ticket_was_created_mail_notifier.class%">
            <argument type="service" id="twig"/>
            <argument type="service" id="mailer"/>
            <argument>%mailer_user%</argument>
            <tag name="diamante.ticket_created_mail_notifier" />
        </service>
    </services>
</container>

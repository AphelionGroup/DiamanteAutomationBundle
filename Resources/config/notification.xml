<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- subscribers start-->
        <parameter key="diamante.abstract_mail_subscriber.class">Diamante\DeskBundle\EventListener\Mail\AbstractMailSubscriber</parameter>
        <parameter key="diamante.mail_ticket_process_manager.class">Diamante\DeskBundle\EventListener\Mail\TicketProcessManager</parameter>
        <parameter key="diamante.mail_ticket_was_deleted_subscriber.class">Diamante\DeskBundle\EventListener\Mail\TicketWasDeletedSubscriber</parameter>
        <parameter key="diamante.mail_attachment_was_deleted_from_ticket_subscriber.class">Diamante\DeskBundle\EventListener\Mail\AttachmentWasDeletedFromTicketSubscriber</parameter>
        <!-- subscribers end -->
    </parameters>

    <services>
        <!-- subscribers start -->
        <service id="diamante.abstract_mail_subscriber" abstract="true">
            <argument type="service" id="twig"/>
            <argument type="service" id="mailer"/>
            <argument type="service" id="oro_security.security_facade"/>
            <argument>%mailer_user%</argument>
        </service>

        <service
            id="diamante.mail_ticket_process_manager"
            class="%diamante.mail_ticket_process_manager.class%"
            parent="diamante.abstract_mail_subscriber">
                <tag name="diamante.notification_subscriber" />
        </service>

        <service
                id="diamante.mail_ticket_was_deleted_subscriber"
                class="%diamante.mail_ticket_was_deleted_subscriber.class%"
                parent="diamante.abstract_mail_subscriber">
            <tag name="diamante.notification_subscriber" />
        </service>

        <service
                id="diamante.mail_attachment_was_deleted_from_ticket_subscriber"
                class="%diamante.mail_attachment_was_deleted_from_ticket_subscriber.class%"
                parent="diamante.abstract_mail_subscriber">
            <tag name="diamante.notification_subscriber" />
        </service>
        <!-- subscribers end -->
    </services>
</container>

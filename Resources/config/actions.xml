<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="diamante_automation.notification_strategy.email.class">Diamante\AutomationBundle\Action\Strategy\EmailNotificationStrategy</parameter>
        <parameter key="diamante_automation.update_strategy.property.class">Diamante\AutomationBundle\Action\Strategy\UpdatePropertyStrategy</parameter>
    </parameters>

    <services>
        <service
                id="diamante_automation.notification_strategy.email"
                class="%diamante_automation.notification_strategy.email.class%"
                >
            <argument type="service" id="diamante.user.service"/>
            <tag name="diamante.action.strategy"/>
        </service>

        <service
                id="diamante_automation.update_strategy.property"
                class="%diamante_automation.update_strategy.property.class%">
            <tag name="diamante.action.strategy"/>
        </service>
    </services>
</container>
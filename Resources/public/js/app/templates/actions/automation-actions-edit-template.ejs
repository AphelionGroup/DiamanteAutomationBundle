<div class="controls">
    <select name="actions[name]" data-attr="name" data-rel-attr="entity,property,value">
        <% for(var key in config.actions) { %>
        <option value="<%= key %>"<%= key == name ? ' selected' : ''%>><%= config.actions[key].label %></option>
        <% } %>
    </select>
    <% if(name == 'update_property'){ %>
        <% var entities = config.entities; %>
        <span>Of:</span>
        <select name="actions[entity]" data-attr="entity"  data-rel-attr="property,value">
            <% for(var key in entities) { %>
            <option value="<%= key %>"<%= key == entity ? ' selected' : ''%>><%= entities[key].label %></option>
            <% } %>
        </select>
        <% if(entity){ %>
        <% var properties = entities[entity].properties; %>
        <span>Set: </span>
        <select name="actions[property]" data-attr="property" data-rel-attr="value">
            <% for(var key in properties) { %>
            <option value="<%= key %>"<%= key == property ? ' selected' : ''%>><%= properties[key].label %></option>
            <% } %>
        </select>
        <% } %>
        <% if(property){ %>
            <span>To: </span>
            <% if(properties[property].type == 'string'){ %>
                <input type="text" name="actions[value]" data-attr="value" value="<%= value %>" />
            <% } else if (properties[property].frontend_options){ %>
                <select name="actions[value]" data-attr="value">
                    <% for(var key in properties[property].frontend_options) { %>
                    <option value="<%= key %>"<%= key == value ? ' selected' : ''%>>
                        <%= properties[property].frontend_options[key] %>
                    </option>
                    <% } %>
                </select>
            <% } %>
        <% } %>
    <% } %>
    <% if(name == 'notify_by_email'){ %>
        <span>To: </span>
        <input type="text" name="actions[value]" data-attr="value" value="<%= value %>" />
    <% } %>
    <div class="pull-right">
        <div class="btn-group">
            <button type="button" class="btn btn-danger" data-action="delete">
                Delete
            </button>
        </div>
    </div>
</div>
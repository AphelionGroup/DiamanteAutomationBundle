{#
    Available variables:
    * entity       - user entity OroCRM\Bundle\AccountBundle\Entity\Account or null
    * indexer_item - indexer item Oro\Bundle\SearchBundle\Query\Result\Item
#}
{% extends 'OroSearchBundle:Search:searchResultItem.html.twig' %}

{% set showImage = true %}
{% set imagePath = entity.logo ? entity.logo.pathname : null %}

{% set recordUrl = indexer_item.recordUrl %}
{% set title = indexer_item.recordTitle %}

{% set entityType = 'eltrino.diamantedesk.branch.entity_label'|trans %}

{% set entityInfo = [
    {'title': 'eltrino.diamantedesk.common.created'|trans, 'value': entity.createdAt ? entity.createdAt|oro_format_datetime : 'eltrino.diamantedesk.common.not_available'},
    {'title': 'eltrino.diamantedesk.common.updated'|trans, 'value': entity.updatedAt ? entity.updatedAt|oro_format_datetime : 'eltrino.diamantedesk.common.not_available'},
] %}

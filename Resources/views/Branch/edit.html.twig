{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with ['OroAddressBundle:Include:fields.html.twig', 'OroFormBundle:Form:fields.html.twig', 'OroTagBundle:Form:fields.html.twig'] %}

{% oro_title_set({params : {"%branch.name%": form.vars.value.name|default('N/A') }}) %}

{% set formAction = form.vars.value.id ? path('diamante_branch_update', { 'id': form.vars.value.id }) : path('diamante_branch_create') %}
{% block head_script %}
    {{ parent() }}
    {% block stylesheets %}
        {{ form_stylesheet(form) }}
    {% endblock %}
{% endblock %}

{% block navButtons %}
    {{ UI.button({'path' : path('diamante_branch_list'), 'title' : 'diamante.desk.ui.cancel'|trans, 'label' : 'diamante.desk.ui.cancel'|trans}) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if form.vars.value.id or resource_granted('orocrm_contact_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('diamante_branch_list'),
            'indexLabel':  'diamante.desk.branch.entity_plural_label'|trans,
            'entityTitle': form.vars.value.name|default('N/A'),
            'hasAvatar':   true,
            'imagePath':   form.vars.value.logo ? form.vars.value.logo.pathname : null
        }
        %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'diamante.desk.branch.entity_plural_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'branchEdit' %}

    {% set dataBlocks = [{
        'title': 'diamante.desk.common.general'|trans,
        'class': 'active',
        'subblocks': [
            {
                'title': 'diamante.desk.branch.details'|trans,
                'data': [
                    form_row(form.name),
                    form_row(form.key),
                    form_row(form.defaultAssignee),
                    form_row(form.logoFile, {'attr': {'accept' : 'image/jpeg, image/png'}}),
                    form_row(form.tags)
                ]
            }
        ]
    }] %}

    {% set dataBlocks = dataBlocks|merge([{
        'title': 'diamante.desk.common.description'|trans,
        'subblocks': [
            {
                'title':null,
                'data': [
                    form_row(form.description),
                ]
            }]
        }]
    ) %}

    {% set dataBlocks = dataBlocks|merge([{
        'title': 'Email Configuration'|trans,
        'subblocks': [
            {
                'title':null,
                'data': [
                    form_row(form.branch_email_configuration.supportAddress),
                    form_row(form.branch_email_configuration.customerDomains)
                ]
            }]
        }]
    ) %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}

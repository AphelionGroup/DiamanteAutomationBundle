{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with ['OroFormBundle:Form:fields.html.twig'] %}
{% oro_title_set({params : {"%ticket.subject%": form.vars.value.subject }}) %}
{% set formAction = path('diamante_ticket_update', { 'id': form.vars.value.id }) %}
{% block head_script %}
    {{ parent() }}
    {% block stylesheets %}
        {{ form_stylesheet(form) }}
    {% endblock %}
{% endblock %}

{% block navButtons %}
    {{ UI.button({'path' : path('diamante_ticket_view', { 'id': form.vars.value.id }), 'title' : 'Cancel'|trans, 'label' : 'Cancel'|trans}) }}
    {{ UI.saveAndStayButton() }}
    {{ UI.saveAndCloseButton() }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('diamante_ticket_list'),
            'indexLabel': 'All Tickets'|trans,
            'entityTitle': form.vars.value.subject|default('N/A'),
            'hasAvatar': true,
            'imagePath': form.vars.value.branch.logo ? form.vars.value.branch.logo.pathname : null
        }
        %}
        {{ parent() }}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'account-profile' %}

    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [
            {
                'title': 'Ticket Details'|trans,
                'data': [
                    form_row(form.subject),
                    form_row(form.description),
                    form_row(form.status),
                    form_row(form.files),
                    form_row(form.priority),
                    form_row(form.reporter),
                    form_row(form.assignee)
                ]
            }
        ]
    }] %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}

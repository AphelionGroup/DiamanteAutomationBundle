{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with ['OroFormBundle:Form:fields.html.twig'] %}
{% set formAction = path('diamante_ticket_assign', { 'id': form.vars.value.id }) %}
{% block head_script %}
    {{ parent() }}

    {% block stylesheets %}
        {{ form_stylesheet(form) }}
    {% endblock %}
{% endblock %}

{% block navButtons %}
    {{ UI.button({'path' : path('diamante_ticket_view', { 'id': form.vars.value.id }), 'title' : 'eltrino.diamantedesk.ui.cancel'|trans, 'label' : 'eltrino.diamantedesk.ui.cancel'|trans}) }}
    {{ UI.buttonType({'type': 'submit', 'class': 'btn-success', 'label': 'eltrino.diamantedesk.ui.save'|trans}) }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('diamante_ticket_list'),
            'indexLabel': 'eltrino.diamantedesk.ticket.entity_plural_label'|trans,
            'entityTitle': form.vars.value.subject|default('eltrino.diamantedesk.common.not_available'|trans)
        }
        %}
        {{ parent() }}
    {% else %}
        {% include 'OroUIBundle::page_title_block.html.twig' %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'account-profile' %}

    {% set dataBlocks = [{
        'title': 'eltrino.diamantedesk.common.general'|trans,
        'class': 'active',
        'subblocks': [
            {
                'title': 'eltrino.diamantedesk.ticket.actions.assign'|trans,
                'data': [
                    form_row(form.assignee)
                ]
            }
        ]
    }] %}

    {% set data = {
    'formErrors': form_errors(form)? form_errors(form) : null,
    'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}